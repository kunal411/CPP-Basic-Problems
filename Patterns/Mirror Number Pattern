/*
   1 
  12
 123
1234
*/

#include<iostream>
using namespace std;


int main(){
    int n;
    cin >> n;
    int i = 1;
    while (i <= n){
        int spaces = 1;
        while (spaces <= n - i){
            cout << ' ';
            spaces += 1;
        }
        int num = 1;
        while (num <= i){
            cout << num;
            num += 1;
        }
        cout << endl;
        i += 1;
    }
  
}
