#include<iostream>
using namespace std;


int main(){
    int n;
    cin >> n;
    int i = 1;
    while (i <= (n + 1)/2){
        int spaces = 1;
        while (spaces <= (n + 1)/2 - i){
            cout << ' ';
            spaces += 1;
        }
        int star = 1;
        while (star <= 2*i - 1){
            cout << '*';
            star += 1;
        }
        cout << endl;
        i = i + 1;
    }
    int j = (n - 1)/2;
    int count = 1;
    while (j > 0){
        int spaces = 1;
        while (spaces <= count){
            cout << ' ';
            spaces += 1;
        }
        int num = 1;
        while (num <= 2*j - 1){
            cout << '*';
            num += 1;
        }
    cout << endl;
    j -= 1  ;
    count += 1;
    }
    
}
